<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/debug_layout"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DEBUG SAND BOX "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <Button
        android:id="@+id/button_debug_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />



    <TableLayout
        android:id="@+id/debug_layout_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TableRow
            android:id="@+id/debug_layout_row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:id="@+id/debug_layout_row_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <org.jesteban.clockomatic.views.MyCalendarDayView
                id="@+id/view555"
                layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                auto:textUpper="hola"
                auto:sizeStyle="BIG"/>
            <view
                class="org.jesteban.clockomatic.views.MyLinkEntryView"
                id="@+id/view_link1"
                layout_width="match_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"/>
            <view
                class="org.jesteban.clockomatic.views.MyLinkEntryView"
                id="@+id/view_link2"
                layout_width="match_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"/>
            <view
                class="org.jesteban.clockomatic.views.MyCalendarDayView"
                layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


