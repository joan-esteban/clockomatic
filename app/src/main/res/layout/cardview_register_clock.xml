<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/card_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        auto:cardCornerRadius="2dp"
        auto:cardElevation="5dp"
        auto:cardUseCompatPadding="true"
        auto:cardMaxElevation="5dp"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <LinearLayout
                android:id="@+id/layout_icon_hour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/icon_image"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="2dp"


                    auto:srcCompat="@drawable/working_time_icon" />

                <TextView
                    android:id="@+id/main_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="16:00"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/offset_day_text"
                    android:paddingLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+2"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/layout_icon_hour"
                android:visibility="invisible"

                />



            <TextView
                android:id="@+id/detail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout_icon_hour"
                android:text="Texte una mica llarg" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>